<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_connect_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zackmalig.blindscontroller.ConnectMenu">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/newMessage" />

    <Button
        android:text="Send Data"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_sendData"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextData" />

    <EditText
        android:inputType="textPersonName"
        android:text="IP Address"
        android:ems="10"
        android:id="@+id/editTextIPAddress"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/newMessage"
        android:layout_marginTop="8dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_width="320dp" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text="Port #"
        android:ems="10"
        android:id="@+id/editTextPortNumber"
        app:layout_constraintTop_toBottomOf="@+id/editTextIPAddress"
        app:layout_constraintLeft_toLeftOf="@+id/editTextIPAddress"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text="Edit Data"
        android:ems="10"
        android:id="@+id/editTextData"
        app:layout_constraintLeft_toLeftOf="@+id/editTextPortNumber"
        app:layout_constraintTop_toBottomOf="@+id/editTextPortNumber"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Test Result:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTestResult"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_sendData"
        app:layout_constraintLeft_toLeftOf="@+id/button_sendData"
        app:layout_constraintRight_toRightOf="@+id/button_sendData" />

</android.support.constraint.ConstraintLayout>
